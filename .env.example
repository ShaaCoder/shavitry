# =================================
# Environment Configuration Template
# =================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=YourApp
MONGODB_DB_NAME=your_database_name

# JWT Configuration - Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_minimum_32_chars
JWT_REFRESH_SECRET=your_refresh_secret_here_different_from_jwt
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_SALT_ROUNDS=12

# App Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NODE_ENV=production

# Email Configuration (Use OAuth2 or App Passwords)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM_NAME=Your Store Name
EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# Payment Gateway Configuration
# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_live_or_test_your_key_here
STRIPE_SECRET_KEY=sk_live_or_test_your_secret_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayU
PAYU_MERCHANT_KEY=your_payu_merchant_key
PAYU_MERCHANT_SALT=your_payu_merchant_salt

# Delivery Partner Configuration
DELHIVERY_API_KEY=your_delhivery_api_key
DELHIVERY_BASE_URL=https://track.delhivery.com/api

SHIPROCKET_EMAIL=your_shiprocket_email
SHIPROCKET_PASSWORD=your_secure_shiprocket_password
SHIPROCKET_BASE_URL=https://apiv2.shiprocket.in/v1/external
SHIPROCKET_PICKUP_LOCATION_ID=your_pickup_location_id

BLUEDART_API_KEY=your_bluedart_api_key
BLUEDART_BASE_URL=https://apigateway.bluedart.com

DTDC_API_KEY=your_dtdc_api_key
DTDC_BASE_URL=https://blktracksvc.dtdc.com

# Development/Testing Configuration
FORCE_MOCK_DELIVERY=false
ENABLE_DEBUG_LOGGING=false

# Commerce
FREE_SHIPPING_THRESHOLD=999
NEXT_PUBLIC_FREE_SHIPPING_THRESHOLD=999

# NextAuth Configuration - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_different_from_jwt
NEXTAUTH_URL=https://yourdomain.com

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Security Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
ENABLE_SECURITY_HEADERS=true
CSP_REPORT_URI=https://yourdomain.com/api/csp-report

# File Upload Configuration
MAX_FILE_SIZE=20971520
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_PATH=uploads

# Storage Provider Configuration (for deployment)
STORAGE_PROVIDER=base64

# Cloudinary Configuration (Optional - for better image handling in production)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Monitoring and Logging (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info